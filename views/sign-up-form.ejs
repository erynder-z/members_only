<!DOCTYPE html>
<html lang="en">
  <%- include("head") %>
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
  />
  <body>
    <div class="signup-container">
      <h1>Sign Up</h1>
      <!-- prettier-ignore -->
      <form class="signup-form" action="" method="POST">
        <div class="floating-label-group">
      <input name="first_name" class="form-control" autocomplete="off" autofocus required type="text" 
      required="true" value="<% if (typeof user =="undefined") { %><% } else { %><%=user.first_name %><% } %>" />
      <label for="first_name" class="floating-label">First Name</label>
        </div>
        <div class="floating-label-group">
      <input name="last_name" class="form-control" autocomplete="off" autofocus required type="text"
      required="true" value="<% if (typeof user =="undefined") { %><% } else { %><%=user.last_name %><% } %>" />
      <label for="last_name" class="floating-label">Last Name</label>
        </div> 
        <div class="floating-label-group">
      <input name="username" class="form-control" autocomplete="off" autofocus required  type="text"
      required="true" value="<% if (typeof user =="undefined") { %><% } else { %><%=user.username %><% } %>" />
      <label for="username" class="floating-label">Username</label>
        </div> 
        <div class="floating-label-group">
      <input name="password" type="password" class="form-control" autocomplete="off" autofocus required />
      <label for="password" class="floating-label">Password</label>
        </div> 
        <div class="floating-label-group">
      <input name="confirmPassword" type="password" class="form-control" autocomplete="off" autofocus required />
      <label for="confirmPassword" class="floating-label">Confirm Password</label>
        </div> 
      <label for="favcolor" class="favcolor">Select your favorite color:</label>
      <input class="colorPicker" type="color" name="favcolor" value="#FF5900">
    
      <button class="signUpBtn">Sign Up<span class="material-symbols-outlined">
        subdirectory_arrow_right
        </span></button>  <button id="go-back" class="backBtn" type="button"><span class="material-symbols-outlined">
        arrow_back
        </span>Back</button>
    </form>
      <div class="error_message-container">
        <ul>
          <% if (typeof errors != "undefined") { %> <% for(const error of
          errors) {%>
          <li class="error-msg"><%=error.msg %></li>
          <% } %> <% } %>
        </ul>
      </div>
    </div>
    <script type="text/javascript" src="/javascripts/ui_scripts.js"></script>
  </body>
</html>
