<!DOCTYPE html>
<html>
  <%- include("head") %>
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
  />
  <body>
    <div class="app-container">
      <%- include('user-header') %>
      <div class="create_message-container">
        <h1>Create Message</h1>
        <!-- prettier-ignore -->
        <form class="create_message-form" action="" method="POST">
          <div class="floating-label-group">
            <input name="title" class="form-control" autocomplete="off" autofocus required type="text" 
              value="<% if (typeof msg == "undefined") { %><% } else { %><%=msg.msg_title %><% } %>" />
              <label for="title" class="floating-label">Title</label>
          </div>
          <div class="floating-label-group">
          <textarea id="message" name="message" class="form-control" autocomplete="off"autofocus required ><% if (typeof msg == "undefined") { %><% } else { %><%=msg.msg_text%><% } %></textarea>
          <label for="message" class="floating-label">Message</label>
        </div>
          <button class="submit_message-btn">Submit <span class="material-symbols-outlined">
            send
            </span></button>
        </form>
        <% if (typeof errors != "undefined") { %> <% for(const error of errors)
        {%>
        <div class="error-msg"><%=error.msg %></div>
        <% } %> <% } %>
      </div>
    </div>
  </body>
</html>
